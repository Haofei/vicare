#!/bin/sh
#
# Post-installation script for Slackware.

exec_prefix="@prefix@"
libexecdir="@libexecdir@"
pkglibexecdir="$libexecdir/@PACKAGE@"
fasldir=/var/cache/vicare-scheme

install -m 0775 -d "$fasldir"

for item in \
    compile-all.sps             \
    compile-ffi.sps             \
    compile-glibc.sps           \
    compile-linux.sps           \
    compile-posix.sps           \
    compile-gcc.sps             \
    compile-readline.sps        \
    compile-cre2.sps
do
    item="$pkglibexecdir"/"$item"
    if test -f "$item"
    then
        echo "*** compiling: $item"
        vicare --fasl-directory "$fasldir" --compile-dependencies "$item" || true
    else echo "*** skipping: $item"
    fi
done

